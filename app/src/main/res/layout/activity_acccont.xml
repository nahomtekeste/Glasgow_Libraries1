<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_drowable"
                tools:context="com.example.vicky.androidui.MainActivity">


    <LinearLayout
            android:layout_width="355dp"
            android:layout_height="412dp"
            android:orientation="vertical" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" android:layout_centerInParent="true">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/galsgowicon"
                android:scaleType="fitCenter"
        />


        <Button
                android:id="@+id/btn_currentload"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="30dp"
                android:text="Currenet Load           >"
                android:textAllCaps="false"
                android:textColor="#FAF6F6"
                android:textSize="30sp"
                android:background="@drawable/button_background"/>


        />

        <Button
                android:id="@+id/btn_reservation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="30dp"
                android:text="Reservation                 >"
                android:textAllCaps="false"
                android:textColor="#FAF6F6"
                android:textSize="30sp"
                android:background="@drawable/button_background"/>


        />
        <Button
                android:id="@+id/btn_charge"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="30dp"
                android:text="Charge                          >"
                android:textAllCaps="false"
                android:textColor="#FAF6F6"
                android:textSize="30sp"
                android:background="@drawable/button_background"/>


        />

    </LinearLayout>
    <LinearLayout
            android:background="#FB015C"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp" android:layout_alignParentStart="true"
            android:layout_marginStart="2dp" android:layout_alignParentTop="true" android:layout_marginTop="4dp"
    >
        <Button
                android:background="@drawable/top_button_color"
                android:text="< Back"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:id="@+id/btn_back"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="start"
                android:textColor="#F7F7F7"/>
        <TextView

                android:text="       My Account             "
                android:layout_width="213dp"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                android:textColor="#EBDFDF" android:gravity="center" android:textSize="24sp"/>
        <Button
                android:background="@drawable/top_button_color"
                android:text="Refresh  @"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:id="@+id/btn_home"

                android:layout_weight="1"
                android:gravity="start" android:textColor="#F8F4F4"/>
    </LinearLayout>
    <ScrollView android:layout_width="383dp"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" android:layout_marginEnd="16dp" android:layout_marginTop="582dp"
                android:layout_alignParentTop="true" android:layout_marginBottom="21dp"
                android:layout_alignParentStart="true" android:layout_marginStart="12dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="132dp" android:id="@+id/txt_books"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
