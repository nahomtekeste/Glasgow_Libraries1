<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".find_local">

    <LinearLayout
            android:background="@drawable/top_search_color"
            android:orientation="horizontal"
            android:layout_width="399dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/linearLayout">
        <Button
                android:background="@drawable/top_search_color"
                android:text="< Back"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:id="@+id/btn_back"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FAFAFA" android:textStyle="bold"/>
        <TextView

                android:text="         Search :Catalo             "
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textColor="#F7F6F6"
                android:gravity="center"
                android:textSize="24sp" android:textStyle="bold" android:textAlignment="center"/>
        <Button
                android:background="@drawable/top_search_color"
                android:text="Home  +"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:id="@+id/btn_home"

                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#F8F7F7" android:textStyle="bold" android:textColorHighlight="#202020"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="358dp"
            android:layout_height="85dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/search_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.375" app:layout_constraintVertical_bias="0.276">
        <ImageView
                android:background="@drawable/search_button"
                android:layout_width="78dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/barcode" android:id="@+id/imageView2"
                android:layout_weight="1"/>
        <Button
                android:background="@drawable/search_button"
                android:text="Scan barcode                                                                             Find Books by barcodes"
                android:layout_width="103dp"
                android:layout_height="match_parent" android:id="@+id/button4" android:layout_weight="1"
                android:textColor="#F7F5F5" android:textSize="14sp"/>
    </LinearLayout>
    <EditText
            android:layout_width="374dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:textColorHint="@drawable/search_button"
            android:ems="10"
            android:hint="Type in a keyword or title....."
            android:id="@+id/editText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.809"
            android:layout_marginTop="84dp" app:layout_constraintTop_toTopOf="@+id/linearLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>