<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".event_calender"
       android:background="@color/colorPrimary">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:orientation="vertical"
          android:background="@drawable/nahom"
         android:layout_marginTop="100dp"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="263dp" android:id="@+id/textView" android:layout_alignStart="@+id/null"
                android:text="Glasgow Event Libararies" android:textSize="30sp" android:gravity="center"
                android:textColor="#7E0E5E"/>
        <CalendarView
                android:layout_height="381dp"
                android:layout_width="match_parent"
                android:id="@+id/calender"
        ></CalendarView>
    </LinearLayout>
    <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
    >
        <Button
                android:background="@drawable/top_button_color"
                android:text="< Back"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:id="@+id/btn_back"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#F7F7F7" android:layout_alignTop="@+id/null" android:layout_alignStart="@+id/null"/>
        <TextView

                android:text="      EVENTS             "
                android:layout_width="213dp"
                android:layout_height="46dp" android:id="@+id/textView3" android:layout_weight="1"
                android:textColor="#EBDFDF" android:gravity="center" android:textSize="24sp"/>
        <Button
                android:background="@drawable/top_button_color"
                android:text="Home +"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:id="@+id/btn_home"

                android:layout_weight="1"
                android:gravity="center" android:textColor="#F8F4F4"/>
    </LinearLayout>


</RelativeLayout>