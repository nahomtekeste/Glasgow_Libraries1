<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".find_local">

    <LinearLayout
            android:background="@drawable/top_research_color"
            android:orientation="horizontal"
            android:layout_width="399dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/linearLayout">
        <Button
                android:background="@drawable/top_button_color"
                android:text="< Back"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:id="@+id/btn_back"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#F5F2F2" android:textStyle="bold"/>
        <TextView

                android:text="      RESEARCH 24/7             "
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textColor="#FFFEFE"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold" android:textAlignment="center" android:baselineAligned="false"/>
        <Button
                android:background="@drawable/top_button_color"
                android:text="Home  +"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:id="@+id/btn_home"

                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#F5ECEC" android:textStyle="bold" android:textColorHighlight="#202020"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:id="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="19th Century British Library             > Newspapers"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_brithishlibrary" android:gravity="center|start"
                    android:textSize="21dp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>

            <Button
                    android:text="ABI/Inform Complete                            > "
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_abi" android:gravity="center|start"
                    android:textSize="21dp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="COBRA                                                           > "
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_COBRA" android:gravity="center|start"
                    android:textSize="21dp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text=" Gale Literature Resource        > "
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_Literature_Resource" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Oxford Dictionary Of National       > Biaography"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_Oxford" android:gravity="center|start"
                    android:textSize="21dp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Oxford Reference Online                   > "
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_Reference_Online" android:gravity="center|start"
                    android:textSize="21dp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Proquest Central                                > "
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_Proquest" android:gravity="center|start"
                    android:textSize="21dp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Rock's Backpages                         > "
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_Backpages" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="The scotsman                                > (1817 - 1950)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_scotsman" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="The Virtual Mitchel                          > (3.74 miles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_Mitchel" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>