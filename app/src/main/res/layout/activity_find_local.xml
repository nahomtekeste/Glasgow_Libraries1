<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".find_local">

    <LinearLayout
            android:background="@drawable/top_local_backgroundcolor"
            android:orientation="horizontal"
            android:layout_width="399dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/linearLayout">
        <Button
                android:background="@drawable/top_button_color"
                android:text="< Back"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:id="@+id/btn_back"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#111010" android:textStyle="bold"/>
        <TextView

                android:text="         Local Library             "
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textColor="#6D6464"
                android:gravity="center"
                android:textSize="24sp" android:textStyle="bold" android:textAlignment="center"/>
        <Button
                android:background="@drawable/top_button_color"
                android:text="Home  +"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:id="@+id/btn_home"

                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#242222" android:textStyle="bold" android:textColorHighlight="#202020"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Castlmilk Library                    > (18.3 meters)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_brithishlibrary" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>

            <Button
                    android:text="Mitchel Library                         > (18.3 meters)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_mitchel" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Couper Library                            > (18.3 moles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_couper" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Langside Library                          > (1.9 miles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_langside" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Govanhill Library                       > (2.8 milles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_govanhill" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Pollokshaws Library                > (2.81 miles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_pollokshaw" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Bridgeton Library                      > (2.91 miles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_bridgethon" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Gorbals Library                         > (2.96 miles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_gorbel" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Parkhead Library                      > (3.35 miles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_parkhead" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="GoMA Library                          > (3.74 miles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/btn_goma" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>
            <Button
                    android:text="Ibrox Library                       > (4.1 miles)"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:id="@+id/button" android:gravity="center|start" android:textSize="24sp"
                    android:textStyle="normal" android:background="#00C9A7A7"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>